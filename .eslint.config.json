{
    "ecmaFeatures": {
      "jsx": true
    },
    "env": {
      "browser": true,
      "node": true,
      "jquery": true
    },
    "rules": {
      "quotes": [1, "single"],
      "no-trailing-spaces": 1,
      "eol-last": 1,
      "no-unused-vars": 0,
      "no-underscore-dangle": 0,
      "no-alert": 0,
      "no-lone-blocks": 1,
      "indent": [1, 4],
      "object-curly-spacing": [1, "always"],
      "dot-notation": [1, { "allowKeywords": false }],
      "comma-dangle": [1, "always-multiline"]
    },
    "globals": {
      "jQuery": true,
      "$": true
    }
  }
